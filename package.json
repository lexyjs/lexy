{
  "name": "lexy",
  "version": "0.0.0-semver",
  "description": "A JavaScript-based Compiler Generator",
  "author": "Gary Doubl√© <garydouble@live.com>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/lexyjs/lexy"
  },
  "bugs": {
    "email": "garydouble@live.com",
    "url": "https://github.com/lexyjs/lexy/issues"
  },
  "homepage": "https://github.com/lexyjs/lexy/tree/master#readme",
  "main": "dist/lexy.js",
  "module": "src/index.js",
  "scripts": {
    "clean": "rimraf -rf dist",

    "lint": "run-p -s lint:*",
    "lint:src": "eslint src/**/*.js",
    "lint:test": "eslint test/**/*.js",
    "lint:rollup": "eslint rollup/**/*.js",

    "build": "run-p -s build:*",
    "build:dev": "rollup -c rollup/dev.js",
    "build:prod": "rollup -c rollup/prod.js",
    "build:test": "rollup -c rollup/test.js",

    "test": "run-s clean lint build test:dist",
    "test:dist": "mocha dist/lexy.tests.js --reporter list",

    "travis-deploy-once": "travis-deploy-once",
    "semantic-release": "semantic-release"
  },
  "files": [
    "src",
    "dist"
  ],
  "keywords": [
    "scanner",
    "lexer",
    "parser",
    "compiler",
    "generator"
  ],
  "devDependencies": {
    "babel-eslint": "^8.2.1",
    "chai": "^4.1.2",
    "eslint": "^4.16.0",
    "mocha": "^5.0.0",
    "npm-run-all": "^4.1.2",
    "rimraf": "^2.6.2",
    "rollup": "^0.55.1",
    "rollup-plugin-buble": "^0.18.0",
    "rollup-plugin-uglify": "^3.0.0",
    "semantic-release": "^12.4.1",
    "travis-deploy-once": "^4.3.4"
  }
}
