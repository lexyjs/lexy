{
  "name": "lexy",
  "version": "0.2.0",
  "description": "A JavaScript-based Compiler Generator",
  "author": "Gary Doubl√© <garydouble@live.com>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/lexyjs/lexy"
  },
  "bugs": {
    "email": "garydouble@live.com",
    "url": "https://github.com/lexyjs/lexy/issues"
  },
  "homepage": "https://github.com/lexyjs/lexy/tree/master#readme",
  "main": "dist/lexy.js",
  "module": "src/index.js",
  "scripts": {
    "clean": "rimraf -rf dist",
    "lint": "eslint src/**/*.js test/**/*.js rollup.*.js",
    "compile": "rollup -c",
    
    "prebuild": "npm run clean",
    "build": "npm run lint && npm run compile",
    
    "pretest": "npm run build",
    "test": "mocha test --reporter list",

    "travis-deploy-once": "travis-deploy-once",
    "semantic-release": "semantic-release"
  },
  "files": [
    "src",
    "dist"
  ],
  "keywords": [
    "scanner",
    "lexer",
    "parser",
    "compiler",
    "generator"
  ],
  "devDependencies": {
    "babel-eslint": "^8.2.1",
    "chai": "^4.1.2",
    "eslint": "^4.16.0",
    "mocha": "^5.0.0",
    "rimraf": "^2.6.2",
    "rollup": "^0.55.1",
    "rollup-plugin-buble": "^0.18.0",
    "rollup-plugin-uglify": "^3.0.0",
    "travis-deploy-once": "^4.3.4",
    "semantic-release": "^12.4.1"
  }
